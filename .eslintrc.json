{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": ["prettier"],
	"root": true,
	"env": {
		"browser": true,
		"node": true,
		"jest": true
	},
	"ignorePatterns": [".eslintrc.js"],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2018
	}
}
